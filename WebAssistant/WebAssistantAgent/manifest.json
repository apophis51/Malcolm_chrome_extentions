{
    "manifest_version": 3,
    "name": "RankTracker",
    "version": "1.0",
    "description": "Tracks Internal Ranking",
    "permissions": [
        "storage",
        "tabs",
        "scripting",
        "activeTab",
        "http://*/*",
        "https://*/*",
        "declarativeContent", 
        "storage", 
        "<all_urls>"
    ],
    "action":{
      "default_popup": "index.html",
      "default_title": "Latest Covid Report",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "js": [
          "script.js"
        ],
        "css":["cool.css"],
        "matches": [
          "https://*/*"
        ]
      }
    ]
  }
